?>
<tr class="border">
	<td height="18" style="border-left:1px solid #000000; font-size:0; line-height:0;" <?php echo $this->getLabelProperties()?>></td>
	<td height="18" style="border-right:1px solid #000000; font-size:0; line-height:0;" <?php echo $this->getValueProperties()?>></td>
</tr>
<tr class="border">
	<td height="4" style="border-left:1px solid #000000; font-size:0; line-height:0; background:#c8c8c8;" <?php echo $this->getLabelProperties()?>></td>
	<td height="4" style="border-right:1px solid #000000; font-size:0; line-height:0; background:#c8c8c8;" <?php echo $this->getValueProperties()?>></td>
</tr>
<tr class="border">
	<td height="14" style="border-left:1px solid #000000; font-size:0; line-height:0;" <?php echo $this->getLabelProperties()?>></td>
	<td height="14" style="border-right:1px solid #000000; font-size:0; line-height:0;" <?php echo $this->getValueProperties()?>></td>
</tr>
<?php foreach ($this->getTotals() as $_code => $_total): ?>
    <?php if ($_total->getBlockName()): ?>
        <?php echo $this->getChildHtml($_total->getBlockName(), false); ?>
    <?php else:?>
    <tr class="<?php echo $_code?>">
        <td style="border-left:1px solid #000000; padding:0 19px 8px 19px;" <?php echo $this->getLabelProperties()?>>
            <?php if ($_total->getStrong()):?>
				<strong style="font-size:18px; line-height:22px; padding:13px 0 21px; display:block;"><?php echo $this->escapeHtml($_total->getLabel());?></strong>
            <?php else:?>
            <?php echo $this->escapeHtml($_total->getLabel());?>
            <?php endif?>
        </td>
        <td style="border-right:1px solid #000000; padding:0 19px 8px 19px;" <?php echo $this->getValueProperties()?>>
            <?php if ($_total->getStrong()):?>
				<strong style="font-size:18px; line-height:22px; padding:13px 0 21px; display:block;"><?php echo $this->formatValue($_total) ?></strong>
            <?php else:?>
            <?php echo $this->formatValue($_total) ?>
            <?php endif?>
        </td>
    </tr>
    <?php endif?>
<?php endforeach?>
<tr class="border">
	<td style="border-bottom:1px solid #000000; font-size:0; line-height:0;" <?php echo $this->getLabelProperties()?>></td>
	<td style="border-bottom:1px solid #000000; font-size:0; line-height:0;" <?php echo $this->getValueProperties()?>></td>
</tr>