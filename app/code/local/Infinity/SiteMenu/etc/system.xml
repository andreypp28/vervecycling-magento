<?xml version="1.0"?>
<config>
  <sections>
    <sitemenu translate="label" module="sitemenu">
      <label>Site Menu</label>
	  <tab>general</tab>
	  <frontend_type>text</frontend_type>
	  <sort_order>220</sort_order>
	  <show_in_default>1</show_in_default>
	  <show_in_website>1</show_in_website>
	  <show_in_store>1</show_in_store>
      <groups>
        <settings translate="label">
            <label>General</label>
            <frontend_type>text</frontend_type>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
	        <fields>
                <columnItemLimit>
                    <label>Menu Items Per Column</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>9</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                </columnItemLimit>
                <wp_links translate="label">
                    <label>Wordpress Links</label>
                    <frontend_type>textarea</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <comment>Related wordpress links, separated by coma.</comment>
                </wp_links>
	        </fields>
        </settings>
      </groups>
    </sitemenu>
  </sections>
</config>
 